{% extends "layouts/base.njk" %}

{% block content %}
  <!-- Hero Section -->
  <section class="min-h-screen bg-cyan-50 flex items-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-[2.75rem] font-normal text-gray-900 mb-6" data-i18n="hero.title">
        votre allié digital pour des <span class='text-teal-600'>projets intelligents</span>
      </h1>
      <p class="text-xl text-gray-600 mb-8" data-i18n="hero.subtitle">
        outils simples pour créateurs indépendants - maximisez votre impact sans complexité technique
      </p>
      <a href="#contact" class="bg-teal-600 text-white px-6 py-3 rounded-md hover:bg-teal-700 transition-colors scroll-smooth" data-i18n="hero.cta">
        construisons votre futur digital
      </a>
    </div>
  </section>

  <!-- Our Approach -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-normal text-gray-900 mb-12 text-center" data-i18n="approach.title">pourquoi travailler avec moi ?</h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Approach Card 1 -->
        <div class="p-6 border rounded-md hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-teal-600 rounded-full mb-4 flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-xl font-normal mb-3" data-i18n="approach.cards.solutions.title">solutions qui ont du sens</h3>
          <p class="text-gray-600" data-i18n="approach.cards.solutions.description">
            outils personnalisés qui s'adaptent à vos besoins réels, évitant toute complexité inutile
          </p>
        </div>

        <!-- Approach Card 2 -->
        <div class="p-6 border rounded-md hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-teal-600 rounded-full mb-4 flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-normal mb-3" data-i18n="approach.cards.lightweight.title">solutions légères</h3>
          <p class="text-gray-600" data-i18n="approach.cards.lightweight.description">
            outils construits sur mesure qui répondent à vos besoins précis, évitant les plateformes surchargées
          </p>
        </div>

        <!-- Approach Card 3 -->
        <div class="p-6 border rounded-md hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 bg-teal-600 rounded-full mb-4 flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-normal mb-3" data-i18n="approach.cards.partnership.title">partenariat direct</h3>
          <p class="text-gray-600" data-i18n="approach.cards.partnership.description">
            travaillez directement avec moi - pas d'intermédiaires, pas d'équipes commerciales, juste une expertise ciblée
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-cyan-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-normal text-gray-900 mb-12 text-center" data-i18n="services.title">solutions tech à échelle humaine</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Service 1: Bespoke Automation -->
        <div class="bg-white p-8 rounded-md shadow-md border border-teal-600/20">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 bg-teal-600 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-normal text-gray-900" data-i18n="services.automation.title">automatisation sur mesure</h3>
          </div>
          <p class="text-gray-600 mb-4" data-i18n="services.automation.description">
            flux de travail précis qui respectent votre temps et votre consommation d'énergie :
          </p>
          <ul class="list-disc pl-6 space-y-2 mb-6">
            <li class="text-gray-600" data-i18n="services.automation.items.item1">systèmes de traitement de documents</li>
            <li class="text-gray-600" data-i18n="services.automation.items.item2">automatisation de la communication client</li>
            <li class="text-gray-600" data-i18n="services.automation.items.item3">flux de synchronisation de données</li>
          </ul>
          <div class="bg-cyan-50 p-4 rounded-md border border-teal-600/10">
            <p class="text-sm font-normal text-teal-600" data-i18n="services.automation.pricing.label">modèle de tarification éthique :</p>
            <p class="text-gray-600" data-i18n="services.automation.pricing.value">200-500€ installation + 20€/mois maintenance</p>
          </div>
        </div>

        <!-- Service 2: Lightweight Development -->
        <div class="bg-white p-8 rounded-md shadow-md border border-teal-600/20">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 bg-teal-600 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-normal text-gray-900" data-i18n="services.development.title">outils digitaux essentiels</h3>
          </div>
          <p class="text-gray-600 mb-4" data-i18n="services.development.description">
            solutions construites avec un objectif précis, évitant les fonctionnalités superflues :
          </p>
          <ul class="list-disc pl-6 space-y-2 mb-6">
            <li class="text-gray-600" data-i18n="services.development.items.item1">plateformes communautaires</li>
            <li class="text-gray-600" data-i18n="services.development.items.item2">tableaux de bord de projet</li>
            <li class="text-gray-600" data-i18n="services.development.items.item3">systèmes de gestion de ressources</li>
          </ul>
          <div class="bg-cyan-50 p-4 rounded-md border border-teal-600/10">
            <p class="text-sm font-normal text-teal-600" data-i18n="services.development.pricing.label">développement durable :</p>
            <p class="text-gray-600" data-i18n="services.development.pricing.value">500-1500€ forfait unique</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-gray-900 text-white scroll-mt-20">
    <div class="container mx-auto px-4">
      <form class="space-y-6" id="contactForm">
        <div>
          <label for="userName" class="block mb-2 font-normal" data-i18n="contact.form.name.label">votre nom</label>
          <input 
            type="text" 
            id="userName"
            required
            class="w-full p-3 rounded-md bg-gray-900 border border-teal-600 focus:ring-2 focus:ring-cyan-50">
        </div>

        <div>
          <label for="userEmail" class="block mb-2 font-normal" data-i18n="contact.form.email.label">email</label>
          <input 
            type="email" 
            id="userEmail"
            required
            aria-describedby="emailHelp"
            class="w-full p-3 rounded-md bg-gray-900 border border-teal-600 focus:ring-2 focus:ring-cyan-50">
          <p id="emailHelp" class="text-sm text-teal-600/80 mt-1" data-i18n="contact.form.email.help">
            uniquement utilisé pour répondre à votre demande
          </p>
        </div>

        <div>
          <label for="projectDetails" class="block mb-2 font-normal" data-i18n="contact.form.details.label">détails du projet</label>
          <textarea 
            id="projectDetails" 
            rows="4"
            required
            class="w-full p-3 rounded-md bg-gray-900 border border-teal-600 focus:ring-2 focus:ring-cyan-50"></textarea>
        </div>

        <div class="form-success opacity-0 transition-opacity duration-300" role="alert" data-i18n="contact.form.success">
          message envoyé avec succès !
        </div>

        <button type="submit" class="w-full bg-teal-600 hover:bg-teal-700 text-white font-normal py-3 px-6 rounded-md transition-colors" data-i18n="contact.form.submit">
          envoyer le message
        </button>
      </form>
    </div>
  </section>
{% endblock %}